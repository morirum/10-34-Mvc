@using _10_30.Models.Entity
@model List<TBLKATEGORILER1>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>Burası kategorilerin listeneceği yer olacak</h2>

<table class="table table-bordered">
    <tr>
        <th>KATEGORİ ID</th>
        <th>KATEGORİ ADI</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>
    <tbody>
        @foreach (var ktgr in Model)
        {
        <tr>
            <th>@ktgr.KATEGORIID</th>
            <td>@ktgr.KATEGORIAD </td>
            <td><a href="/KATEGORI/SIL/@ktgr.KATEORIID" class="btn btn-danger">SİL</a> </td>
            <td><a href="/KATEGORI/KategoriGetir/@ktgr.KATEORIID" class="btn btn-success">SİL</a> </td>

        </tr>
        }
    </tbody>
</table>

<a href="/KATEGORILER/YeniKategori/" class="btn btn-primary">YENİ KATEGORİ EKLE</a>

