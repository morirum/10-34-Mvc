@model MvcDbStok.Models.Entity.TBLURUNLER
@{
    ViewBag.Title = "UrunEkle";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


<form method="post" class="form-group">
    <div>
        <label>Ürün Adı</label>
        <input type="text" class="from-control" name="URUNAD" />
    </div>
    <div>
        <label>Ürün Kategori</label>
        <input type="text" class="from-control" name="URUNKATEGORI" />
    </div>
    <div>
        <label>Kategori Seçiniz</label>
        @Html.DropDownListFor(m=>m.TBLKATEGORILER1.KATEGORIID,() List<SelectListItem>)ViewBag.dgr, new{@class="form-control"}

    </div>
    <div>
        <label>Ürün Fiyat</label>
        <input type="text" class="from-control" name="FIYAT" />
    </div>
    <div>
        <label>Stok Adet</label>
        <input type="text" class="from-control" name="STOK" />
    </div>

    <div style="margin-top:15px;">
        <button class="btn btn-info">Ürün Ekle</button>
    </div>


</form>
